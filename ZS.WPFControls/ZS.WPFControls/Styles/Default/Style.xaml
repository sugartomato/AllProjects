                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="Toolbar_NormalButton_Grid" Value="{StaticResource MinMaxButton_Pressed}"></Setter>
                        </Trigger>
